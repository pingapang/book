\begin{eqnarray}
age = \Sexpr{round(out1$coef[1],1)} + \Sexpr{round(out1$coef[2],2)} \times  weight + e \\
e \sim N(0, \Sexpr{round(summary(out1)$sigma^2,0)})
\end{eqnarray}




